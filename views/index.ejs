        /* Box Model Hack */
* {
	box-sizing: border-box;
}
html {
	font-size: 62.5%;
}
/* Clear fix hack */
.clearfix:after {
	content: ".";
	display: block;
	clear: both;
	visibility: hidden;
	line-height: 0;
	height: 0;
}

.clear {
	clear: both;
}

/******************************************
/* BASE STYLES
/*******************************************/

body {
	overflow-x: hidden;
}
a {
	text-decoration: none;
}
img {
	width: 100%;
	max-width: 100%;
}
section {
	padding: 0 1rem;
}
/******************************************
/* LAYOUT
/*******************************************/
header {
	padding: 0 1rem;
}
nav * {
	display: none;
}
/* section 1 */
header + section {
	background: url(https://res.cloudinary.com/db88ckgtm/image/upload/v1606853558/100devs/restaurant/restaurant-hero_eoge05.jpg) center no-repeat;
	background-size: cover;
	height: 100vh;
	clear: both;
	padding: 23rem 5rem;
	margin-top: -1.2rem;
}
header + section h1 {
	font-size: 5rem;
	width: 30rem;
	margin-top: -6rem;
}
header + section h1 + section input{
	width: 20rem;
	padding: 0.6rem 0.8rem;
	margin: 0;
	outline: none;
	border: 0;
}
header + section h1 + section input + a,
header + section + section section + section h6 + h2  + p + p + section a {
	padding: 0.6rem 0.6rem;
	color: #fff;
	background: orange;
	margin-left: -0.2rem;
}
header + section h1 + section + section li {
	float: left;
	width: 5rem;
	list-style: none;
	margin: 1.5rem 0;
}
header + section h1 + section + section li a i {
	padding-right: 0.5rem;
}
/* section 2 */
header + section + section section{
	margin: 5rem 0;
}
header + section + section {
	background: url(https://res.cloudinary.com/db88ckgtm/image/upload/v1606853566/100devs/restaurant/discover_uyvoke.jpg) left no-repeat;
	background-size: cover;
	height: 60vw;
}
header + section + section section + section {
	padding-top: 1rem;
}
header + section + section section + section h6{
	color: orange;
	font-size: 1rem;
	margin-bottom: -1rem;
}
header + section + section section + section h6 + h2 {
	font-size: 200%;
}
header + section + section section + section h6 + h2 + p,
header + section + section section + section h6 + h2  + p + p {
	width: 95%;
	font-size: 120%;
	line-height: 1.4;
}
header + section + section section + section h6 + h2  + p + p + section i {
	background: rgb(247, 182, 61);
	padding: 0.6rem 0.6rem;
	color: #fff;
}
/* section3 */
header + section + section  + section {
	margin-top: 10rem;
}
header + section + section  + section  h6,
header + section + section  + section  h6 + h2,
header + section + section  + section  h6 + h2 + ul {
	text-align: center;
}

header + section + section  + section  h6 {
	font-size: 100%;
	margin: 0;
	color: orange;
}
header + section + section  + section  h6 + h2 + ul + hr + section  img {
	margin: 5% 0;
}
header + section + section  + section  h6 + h2 {
	font-size: 270%;
}
header + section + section  + section  h6 + h2 + ul {
	list-style: none;
}
header + section + section  + section  h6 + h2 + ul li {
	float: left;
	margin: 0 5%;
}
header + section + section  + section  h6 + h2 + ul li a:hover, 
